<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/side_margin"
        android:id="@+id/main_layout">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView14" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/change_phone_number_desc"
                    android:id="@+id/desc"
                    android:gravity="left" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/desc"
                    android:layout_marginTop="30dp"
                    android:id="@+id/old_number_layout">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/linearLayout8"
                        android:layout_marginTop="30dp" >

                        <EditText
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/editText4"
                            android:text="+39"
                            android:layout_alignTop="@+id/job_tag_suggest"
                            android:layout_toStartOf="@+id/job_tag_suggest"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="left"
                            android:editable="false"
                            android:enabled="false" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:ems="10"
                            android:id="@+id/old_phonenumber"
                            android:layout_below="@+id/textView7"
                            android:layout_alignEnd="@+id/textView7"
                            android:editable="true"
                            android:phoneNumber="true"
                            android:layout_gravity="right" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Vecchio numero di telefono"
                        android:id="@+id/textView91"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/old_number_layout"
                    android:layout_marginTop="30dp"
                    android:id="@+id/new_number_layout">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/linearLayout9"
                        android:layout_marginTop="30dp" >

                        <EditText
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/editText7"
                            android:text="+39"
                            android:layout_alignTop="@+id/job_tag_suggest"
                            android:layout_toStartOf="@+id/job_tag_suggest"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="left"
                            android:editable="false"
                            android:enabled="false" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:ems="10"
                            android:id="@+id/new_phonenumber"
                            android:layout_below="@+id/textView7"
                            android:layout_alignEnd="@+id/textView7"
                            android:editable="true"
                            android:phoneNumber="true"
                            android:layout_gravity="right" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Nuovo numero di telefono"
                        android:id="@+id/textView92"
                        android:textStyle="bold" />
                </RelativeLayout>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_layout"
        android:layout_margin="@dimen/side_margin"
        android:layout_below="@+id/main_layout">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Invia"
            android:id="@+id/end_button"
            android:background="@drawable/blue_selector"
            android:textColor="@color/jobbe_white" />
    </RelativeLayout>
</RelativeLayout>